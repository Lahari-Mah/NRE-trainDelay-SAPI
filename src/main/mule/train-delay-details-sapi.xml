    <apikit:config name="train-delay-details-sapi-config" api="api/train-delay-details-sapi.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <flow name="train-delay-details-sapi-main">
        <http:listener config-ref="train-delay-sapi-HTTP_Listener_config" path="/api/*">
            <http:response statusCode="#[vars.httpStatus default 200]">
                <http:headers>#[vars.outboundHeaders default {}]</http:headers>
            </http:response>
